# Banyan Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# REQUIRED - App won't work without these
# ============================================

# OpenAI API Key (for GPT-4 generation)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Database Connection String (PostgreSQL)
# Format: postgresql://user:password@host:port/database
# For local: postgresql://postgres:password@localhost:5432/banyan
# For Supabase: get from project settings
DATABASE_URL=postgresql://...

# Clerk Authentication (free tier available)
# Get these from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# ============================================
# OPTIONAL - Enhanced features
# ============================================

# Google Gemini API (optional, for hybrid AI strategy)
# Get yours at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Anthropic Claude API (optional, currently has regional restrictions)
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Sentry Error Tracking (optional but recommended for production)
# Get yours at: https://sentry.io
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# PostHog Analytics (optional but recommended)
# Get yours at: https://posthog.com
POSTHOG_API_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Supabase (if using for additional features)
# Get from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# ============================================
# APP CONFIGURATION
# ============================================

# App URL (change for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node Environment
NODE_ENV=development

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Enable debug logging
DEBUG=false

# Skip rate limiting in development
DISABLE_RATE_LIMIT=true

# Use cheaper models for testing
USE_TEST_MODELS=false

